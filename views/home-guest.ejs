<%- include('partials/header') -%> 
    
    <div class="container-fluid main">
    
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3 mb-3">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-5 col-sm-12 logo-div">
                        <div class="container-fluid">
                            <a class="text-decoration-none" href="/"><span class="navbar-brand mb-0 h1 logo">OurApp</span></a>
                        </div>
                    </div>
                    <div class="col col-sm-6">
                        
                        <!-- login -->
                        <form class="nav-form" method="post" action="/users/login">
                            <div class="row">
                                <div class="col-lg-5 col-md-5 col-sm-12">
                                    <input class="form-control" type="text" placeholder="Username" name="username">
                                </div>
                                <div class="col-lg-5 col-md-5">
                                    <input class="form-control" type="password" placeholder="Password" name="password">
                                </div>
                                <div class="col-lg-2 col-md-2">
                                    <button class="btn btn-primary text-nowrap" type="submit">Sign In</button>
        
                                </div>
                            </div>
        
                        </form>
                    </div>
                </div>
            </div>
        </nav>
        <!-- alert -->
        <%- include('partials/alert') -%> 

        <div class="container mid py-md-5">
            <div class="row">
                <div class="col-lg-7 d-flex flex-column justify-content-center py-3 py-md-5 px-4">
                    <h1 class="display-1">Remember Writing?</h1>
                    <p class="lead">Are you sick of short tweets and impersonal "shared" posts that are reminiscent of the late 90's email forwards? We believe getting back to actualy writing is the key to enjoying the internet again.</p>
                </div>
                <div class="col-lg-5 d-flex flex-column justify-content-center pl-lg-5 pb-3 py-lg-5 px-4">

                    <!-- register -->
                    <form class="register-form" action="/users/register" method="post">
                        <div class="mb-3 alert-div">
                          <label for="username" class="form-label form-text">Username</label>
                        
                          <% if(typeof username_err !== 'undefined') {%> 
                          <div class="alert alert-danger alert-dismissible fade show form-alert alert-reg"><%= username_err %></div>
                          <% } %> 

                          <input type="text" name="username" class="form-control" placeholder="Pick a username"
                          value="<%= typeof username !== 'undefined'? username : '' %>">
                        </div>
                        <div class="mb-3 alert-div">
                          <label for="email" class="form-label form-text">Email</label>
                          
                          <% if(typeof email_err !== 'undefined') {%> 
                            <div class="alert alert-danger alert-dismissible fade show form-alert alert-reg"><%= email_err %></div>
                            <% } %>
                          
                          <input type="email" name="email" class="form-control" placeholder="you@example.com"
                          value="<%= typeof email !== 'undefined'? email : '' %>">
                        </div>
                        <div class="mb-3 alert-div">
                          <label for="password" class="form-label form-text">Password</label>
                          <% if(typeof password_err !== 'undefined') {%> 
                            <div class="alert alert-danger alert-dismissible fade show form-alert alert-reg"><%= password_err %></div>
                            <% } %>
                          <input type="password" name="password" class="form-control" placeholder="Create a password"
                          value="<%= typeof password !== 'undefined'? password : '' %>">
                        </div>
                        
                        <button type="submit" class="btn btn-lg btn-success w-100 py-4 mt-2">Sign up for OurApp</button>
                      </form>
                </div>
            </div>
        </div>

<%- include('partials/footer') -%> 