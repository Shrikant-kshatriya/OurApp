<%- include('partials/header') -%> 
    
    <div class="container-fluid main">
    
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3 mb-3">
            <div class="container">
                <div class="row">

                    <div class="col-lg-8 col-md-5 col-sm-12 logo-div">
                        <div class="container-fluid">
                            <a class="text-decoration-none" href="/"><span class="navbar-brand mb-0 h1 logo">OurApp</span></a>
                        </div>
                    </div>

                    <div class="col-lg-4 col-sm-6 dashboard d-flex flex-row justify-content-end align-items-center">

                        <%- include('partials/nav') -%> 
                    </div>
                </div>
            </div>
        </nav>

        <!-- alert -->
        <%- include('partials/alert') -%>

        <div class="container mid py-md-5">
            <div class="container w-75">
                
                <div class="container d-flex justify-content-between align-items-center">
                    <h1><%=post.title%></h1>
                    <% if(user.username === currUser.username){%>
                    <div class="d-flex">
                        <form action="/posts/edit/<%=post._id%>" method="get">
                            <button class="btn btn-outline-primary btn-sm" type="submit" ><i class="fa-solid fa-pen-to-square fa-lg"></i></button>
                        </form>
                        <form action="/posts/<%=post._id%>?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger btn-sm ms-2"><i class="fa-solid fa-trash fa-lg"></i></button>
                        </form>
                    </div>
                    <% } %> 
                </div>

                <div class="d-flex mb-3 ">
                    <a href="/users/<%=user.username%>"><img class="nav-img profile-img mx-2 border border-dark"src="data:image/<%=user.picture.contentType%>;base64,
                        <%=user.picture.data.toString('base64')%>"></a>
                    <p class="mx-2 mb-0 align-self-end fw-semilight">Posted by <a href="/users/<%=user.username%>" class="text-decoration-none"><%=user.username%></a> on <%=post.date%></p>
                </div>

                <div class="container">
                    <p class="fs-5 mt-5"><%=post.body%></p>
                </div>

            </div>
        </div>

<%- include('partials/footer') -%> 